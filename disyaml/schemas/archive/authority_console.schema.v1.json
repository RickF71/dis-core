{
  "$id": "dis://schema/authority_console.v1",
  "title": "Authority Console Schema",
  "type": "object",
  "properties": {
    "console_id": {"type": "string", "pattern": "^ac-[a-f0-9]{8}$"},
    "bound_domain": {"type": "string"},
    "bound_core": {"type": "string"},
    "seat_holders": {
      "type": "array",
      "items": {"type": "string", "description": "DIS_UID of authorized delegates"}
    },
    "actions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {"type": "string"},
          "type": {"enum": ["plan", "apply", "freeze", "unfreeze", "breakglass"]},
          "policy_ref": {"type": "string"},
          "timestamp": {"type": "string", "format": "date-time"},
          "ci_ref": {"type": "string"},
          "receipt": {"$ref": "dis://schema/receipt.ci.call.v1"}
        },
        "required": ["id", "type", "timestamp", "receipt"]
      }
    }
  },
  "required": ["console_id", "bound_domain", "bound_core"]
}
