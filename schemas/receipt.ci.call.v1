{
  "$id": "dis://schema/receipt.ci.call.v1",
  "title": "Consent Invocation Receipt",
  "type": "object",
  "properties": {
    "receipt_id": {"type": "string", "pattern": "^r-[a-f0-9]{16}$"},
    "by": {"type": "string", "description": "Domain or actor issuing the action"},
    "action": {"type": "string"},
    "timestamp": {"type": "string", "format": "date-time"},
    "hash": {"type": "string"},
    "provenance": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {"enum": ["SAT", "domain", "policy", "user_consent"]},
          "ref": {"type": "string"},
          "status": {"enum": ["valid", "expired", "revoked"]},
          "redacted_fields": {"type": "array", "items": {"type": "string"}}
        }
      }
    },
    "signature": {"type": "string"},
    "frozen_core_hash": {"type": "string"}
  },
  "required": ["receipt_id", "by", "action", "timestamp", "hash", "signature"]
}
